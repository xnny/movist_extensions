{
  "name": "Movist Pro Chrome Extensions",
  "description" : "调用Movist打开网络视频",
  "version": "1.0.1",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts":[
    {
      "matches": ["https://*/*"],
      "js": ["js/content.js"],
      "run_at":"document_end"
    }
  ],
  "browser_action": {
    "default_icon": "img/toolbar_icon.png",
    "default_title": "Movist Pro"
  },
  "icons": {
    "128": "img/icon_128x128.png"
  },
  "permissions": [
    "debugger",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "activeTab",
    "https://*/*",
    "http://*/*"
  ],
  "manifest_version": 2
}
